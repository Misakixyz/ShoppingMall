<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="消息"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" "
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ib_message_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_clear" />

        <ImageButton
            android:id="@+id/ib_message_maillist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_maillist" />

        <ImageButton
            android:id="@+id/ib_message_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_add" />
    </LinearLayout>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_search"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/ib_message_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_button1"
            />
        <ImageButton
            android:id="@+id/ib_message_button2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_button2"
            />
        <ImageButton
            android:id="@+id/ib_message_button3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_button3"
            />
        <ImageButton
            android:id="@+id/ib_message_button4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_button4"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_recyclerview"
        />
</LinearLayout>
